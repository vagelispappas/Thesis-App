<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/et_collection_label"
            android:layout_width="322dp"
            android:layout_height="49dp"
            android:layout_weight="0.72"
            android:text="@string/collection_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/et_item_label"
            android:layout_width="939dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="@string/item_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_linear_lv_fr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_listview_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/list1"
                android:layout_width="338dp"
                android:layout_height="wrap_content" >
            </ListView>

            <ListView
                android:id="@android:id/list"
                android:layout_width="530dp"
                android:layout_height="wrap_content" >
            </ListView>

            <FrameLayout
                android:id="@+id/framelayout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible" >

            </FrameLayout>
          
        </LinearLayout>
    </LinearLayout>

</LinearLayout>