<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zoteroapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
             
            android:name="com.example.zoteroapp.MainZoteroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
          
        </activity>
        <activity
             
            android:name="com.example.zoteroapp.ItemMemberActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ITEMMEMBERACTIVITY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
          
        </activity>
         <activity
             
            android:name="com.example.zoteroapp.CollectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.COLLECTIONACTIVITY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
          
        </activity>
        <activity
            android:name="com.example.zoteroapp.m_screen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.M_SCREEN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
       </activity>
       <activity
            android:name="com.example.zoteroapp.ItemActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ITEMACTIVITY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
       </activity>
       
        <activity
            android:name="com.example.zoteroapp.tabs.TabBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TABBAR" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.zoteroapp.tabs.Tab1"></activity>
         <activity android:name="com.example.zoteroapp.tabs.Tab2"></activity>
        
       
    </application>

</manifest>